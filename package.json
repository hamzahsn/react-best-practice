{
  "name": "react-best-practice",
  "version": "1.0.0",
  "description": "React towards best practices",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.tsx",
    "lint:fix": "npm run lint -- --fix",
    "style:lint": "stylelint  \"./src/**/*.{css,scss,sass}\" --fix --formatter verbose",
    "build:css": "node-sass src/ -o src/",
    "watch:css": "npm run build:css && node-sass src/ -o src/ -w -r",
    "dev": "cross-env NODE_ENV=development webpack serve --config config/webpack.config.js",
    "start": "run-p watch:css dev",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest  --watch --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=test jest  --watchAll --coverage --watchAll=false",
    "test:update": "cross-env NODE_ENV=test jest  --updateSnapshot",
    "update:packages": "npx npm-check-updates -u && npm i",
    "check:bundles": "cross-env NODE_ENV=performance webpack serve --config config/webpack.config.js"
  },
  "keywords": [
    "Github",
    "typescript",
    "react",
    "webpack"
  ],
  "engines": {
    "node": ">=12.18.3"
  },
  "author": {
    "name": "Hamza Amdouni",
    "email": "amdouni.hamza.hsn@gmail.com",
    "url": "https://iamhamza.io"
  },
  "license": "ISC",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/plugin-proposal-numeric-separator": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.8",
    "@types/classnames": "^2.3.0",
    "@types/cssnano": "^4.0.0",
    "@types/dotenv-webpack": "^7.0.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@types/node-sass": "^4.11.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^3.11.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "brotli-webpack-plugin": "^1.1.0",
    "classnames": "^2.3.1",
